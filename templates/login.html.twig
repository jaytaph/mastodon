{% extends 'base.html.twig' %}

{% block body %}

    <div id="main-wrapper" class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <div class="row no-gutters">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="mb-5">
                                        <h3 class="h4 font-weight-bold text-theme">Donkeyheads Mastodon Service</h3>
                                    </div>

                                    <h6 class="h5 mb-0">Welcome back!</h6>
                                    <p class="text-muted mt-2 mb-5">Enter your email and password to access your account.</p>

                                    <form action="{{ path('web_login') }}" method="post">
                                        <div class="form-group">
                                            <label class="form-label" for="user">Email address</label>
                                            <input type="text" id="user" name="_username" class="form-control" value="{{ last_username }}"/>
                                        </div>
                                        <div class="form-group mb-5">
                                            <label class="form-label" for="password">Password</label>
                                            <input type="password" id="password" name="_password" class="form-control" />
                                        </div>

                                        <div class="form-outline mb-5">
                                            {% if error %}
                                                <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                        </div>


                                        <button type="submit" class="btn btn-primary">Login</button>
                                        <a href="{{ path('app_forgot_password_request') }}" class="forgot-link float-right text-primary">Forgot password?</a>
                                    </form>
                                </div>
                            </div>

                            {% include "overlay.html.twig" %}
                        </div>

                    </div>
                </div>

                <p class="text-muted text-center mt-3 mb-0">Don't have an account? <a href="{{ path('app_register') }}" class="text-primary ml-1">register</a></p>
            </div>
        </div>
    </div>

{% endblock %}
