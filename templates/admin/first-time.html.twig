{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div id="main-wrapper" class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <div class="row no-gutters">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="mb-5">
                                        <h3 class="h4 font-weight-bold text-theme">Donkeyheads Mastodon Service</h3>
                                    </div>

                                    <h6 class="h5 mb-0">First time setup</h6>
                                    <p class="text-muted mt-2 mb-5">It seems that this setup has not been configured yet. You need to create your first admin user and configure your
                                        instance before you can use it.</p>

                                    {{ form_start(registrationForm) }}

                                        {{ form_row(registrationForm.email) }}

                                        {{ form_row(registrationForm.plainPassword, {
                                            label: 'Password'
                                        }) }}

                                        {{ form_row(registrationForm.agreeTerms) }}

                                        <div class="form-group mt-3">
                                            <button type="submit" class="btn btn-primary">Create admin user</button>
                                        </div>

                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>

                            {% include "overlay.html.twig" %}
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
